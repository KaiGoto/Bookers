<%=  notice %>
<h1>Editing Book</h1>
<%= render 'layouts/error_messages', obj: @book %>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p>
  <%= f.submit 'Update Book' %>
  </p>
  <%= link_to "show",book_path %>
  |
  <a class="back" href="/books">Back</a>
<% end %>